---
// Hero component with logo and tagline
import { getEntry } from 'astro:content';

const heroContent = await getEntry('hero', 'main');
---

<div class="hero-section">
  <div class="logo-container">
    <img src="/devrandom_logo.svg" alt="devrandom" class="logo" />
  </div>

  <div class="hero-content" aria-label="Project description">
    <h1 class="hero-headline">{heroContent.data.headline}</h1>
    <p class="hero-subheadline">{heroContent.data.subheadline}</p>
  </div>
</div>

<style>
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .logo-container {
    /* animation disabled */
  }

  .logo {
    width: 300px;
    height: auto;
    filter: 
      drop-shadow(0 0 8px rgba(255, 0, 128, 0.10)) 
      drop-shadow(0 0 16px rgba(139, 0, 255, 0.07)) 
      drop-shadow(0 0 24px rgba(255, 0, 128, 0.05));
    /* animation disabled */
  }

  @media (max-width: 768px) {
    .logo {
      width: 250px;
    }
  }

  @media (max-width: 480px) {
    .logo {
      width: 200px;
    }
  }

  /* hero content styles */
  .hero-content {
    font-family: "JetBrains Mono", monospace;
    color: rgba(0, 0, 0, 0.85);
    max-width: 80ch;
    text-align: center;
    margin: 0 auto;
    line-height: 1.5;
  }

  .hero-headline {
    font-size: 1.8rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    margin-bottom: 1rem;
    color: #000;
  }

  .hero-subheadline {
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.6;
    color: rgba(0, 0, 0, 0.8);
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero-headline { 
      font-size: 1.5rem; 
    }
    .hero-subheadline { 
      font-size: 0.9rem; 
    }
  }

  @media (max-width: 480px) {
    .hero-headline { 
      font-size: 1.3rem; 
    }
    .hero-subheadline { 
      font-size: 0.85rem; 
    }
  }
</style> 