---
// Email signup component for waitlist
---

<!-- Netlify email capture form -->
<form name="interest" netlify class="interest-form" aria-label="Join waitlist">
  <!-- Netlify needs an explicit hidden field when using name attr -->
  <input type="hidden" name="form-name" value="interest" />

  <label for="emailField" class="sr-only">Email address</label>
  <input id="emailField" name="email" type="email" required placeholder="you@example.com" class="email-input" />

  <button type="submit" class="email-submit">Join&nbsp;Waitlist</button>
</form>

<style>
  /* wait-list form */
  .interest-form {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    font-family: "JetBrains Mono", monospace;
    margin: 0.25rem auto 0.5rem;
  }

  .email-input {
    font-family: inherit;
    font-size: 0.9rem;
    padding: 0.45rem 0.75rem;
    border: 1px solid rgba(0, 0, 0, 0.25);
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.85);
    color: #000;
    min-width: 220px;
  }

  .email-input:focus {
    outline: 2px solid rgba(0, 0, 0, 0.5);
    outline-offset: 1px;
  }

  .email-submit {
    font-family: inherit;
    font-size: 0.9rem;
    padding: 0.5rem 1.1rem;
    border: none;
    border-radius: 4px;
    background: #000;
    color: #fff;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .email-submit:hover {
    background: #333;
  }

  @media (max-width: 480px) {
    .interest-form {
      gap: 0.5rem;
    }

    .email-input {
      flex: 1 1 100%;
      min-width: 0;
    }

    .email-submit {
      width: 100%;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style> 