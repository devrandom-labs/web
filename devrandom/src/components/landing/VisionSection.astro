---
// Vision section component
import { getEntry } from 'astro:content';
import RoadmapTimeline from './RoadmapTimeline.tsx';

const visionContent = await getEntry('vision', 'main');
const { Content } = await visionContent.render();
---

<section class="vision-section">
  <div class="vision-container">
    <h2 class="vision-title">{visionContent.data.title}</h2>
    <div class="vision-content">
      <!-- Mission statement (just the first two paragraphs) -->
      <p>Nova is the first step in our mission to build a new foundation for digital trust. At devrandom, we believe the future of security lies in combining decentralized technologies like SSI with intelligent automation. We are building the tools for a verifiable, private, and secure digital world.</p>
      <p>The age of black-box security is over. The future demands transparency, verifiability, and autonomous intelligence working in perfect harmony.</p>
    </div>
  </div>
  
  <!-- Interactive Timeline -->
  <div class="timeline-wrapper">
    <RoadmapTimeline client:load />
  </div>
</section>

<style>
  .vision-section {
    padding: 4rem 1rem 2rem 1rem;
    margin: 0 auto;
  }

  .vision-section .vision-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    padding: 3rem 2rem;
    margin-bottom: 3rem;
  }

  .timeline-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .vision-title {
    font-family: "JetBrains Mono", monospace;
    font-size: 1.8rem;
    font-weight: 600;
    color: #000;
    margin-bottom: 2rem;
  }

  .vision-content {
    font-family: "JetBrains Mono", monospace;
    font-size: 1rem;
    color: rgba(0, 0, 0, 0.8);
    line-height: 1.7;
  }

  .vision-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .vision-content :global(p:last-child) {
    margin-bottom: 0;
    font-style: italic;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.9);
  }

  @media (max-width: 768px) {
    .vision-section {
      padding: 3rem 1rem 2rem 1rem;
    }

    .vision-section .vision-container {
      margin: 0 1rem 2rem 1rem;
      padding: 2rem 1.5rem;
    }

    .vision-title {
      font-size: 1.5rem;
    }

    .vision-content {
      font-size: 0.9rem;
    }

    .timeline-wrapper {
      padding: 0 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .vision-section {
      padding: 2rem 0.5rem 1rem 0.5rem;
    }

    .vision-section .vision-container {
      margin: 0 0.5rem 1.5rem 0.5rem;
      padding: 1.5rem 1rem;
    }

    .vision-title {
      font-size: 1.3rem;
    }

    .timeline-wrapper {
      padding: 0 0.25rem;
    }
  }
</style> 