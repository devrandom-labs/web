---
import "../styles/global.css";
import Navigation from "../components/layout/Navigation.astro";
import Hero from "../components/landing/Hero.astro";
import EmailSignup from "../components/landing/EmailSignup.astro";
import TeamSection from "../components/landing/TeamSection.astro";
import BackgroundCanvas from "../components/landing/BackgroundCanvas.astro";
import ProblemSection from "../components/landing/ProblemSection.astro";
import SolutionSection from "../components/landing/SolutionSection.astro";
import FinalCTA from "../components/landing/FinalCTA.astro";
import LandingFooter from "../components/landing/LandingFooter.astro";
import MissionSection from "../components/landing/MissionSection.astro";
import TimelineSection from "../components/landing/TimelineSection.astro";

const pageTitle = "devrandom • AI Security Solutions";
const description = "Nova by devrandom: Autonomous AI agents with Self-Sovereign Identity (SSI) that hunt, verify, and neutralize cyber threats. Securing the AI era with trustworthy, verifiable intelligence.";
const ogimage = {
  url: "/images/imagedefault.webp",
  alt: "devrandom",
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://devrandom.co/" />
    <meta property="og:title" content="devrandom • AI Security Solutions" />
    <meta property="og:description" content="Nova by devrandom: Autonomous AI agents with Self-Sovereign Identity (SSI) that hunt, verify, and neutralize cyber threats before they strike." />
    <meta property="og:image" content="https://devrandom.co/android-chrome-512x512.png" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:image:alt" content="devrandom logo" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://devrandom.co/" />
    <meta name="twitter:title" content="devrandom • AI Security Solutions" />
    <meta name="twitter:description" content="Nova by devrandom: Autonomous AI agents with Self-Sovereign Identity (SSI) that hunt, verify, and neutralize cyber threats before they strike." />
    <meta name="twitter:image" content="https://devrandom.co/android-chrome-512x512.png" />
    <link rel="canonical" href="https://devrandom.co/" />
    <!-- SVG favicon for modern browsers -->
    <link rel="icon" type="image/svg+xml" href="/devrandom_logo.svg" />
    <!-- PNG fallback favicon -->
    <link rel="alternate icon" href="/favicon-32x32.png" sizes="32x32" />
    <meta name="theme-color" content="#ffffff"/>
    <!-- JetBrains Mono font for code-style tagline -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;600&display=swap" />
  </head>
  <body>
    <Navigation />
    
    <!-- Hero Section (Above the Fold) with Synthwave Background -->
    <section id="hero" class="hero-section">
      <div class="synthwave-bg-fixed"></div>
      <BackgroundCanvas />
      <div class="hero-content">
        <Hero />
        <EmailSignup />
      </div>
    </section>

    <!-- Problem Section -->
    <section id="problem" class="page-section problem-section">
      <div class="synthwave-bg-fixed"></div>
      <div class="section-container">
        <ProblemSection />
      </div>
    </section>

    <!-- Solution Section -->
    <section id="solution" class="page-section solution-section">
      <div class="synthwave-bg-fixed"></div>
      <div class="section-container">
        <SolutionSection />
      </div>
    </section>

    <!-- Mission Section -->
    <section id="mission" class="page-section mission-section">
      <MissionSection />
    </section>

    <!-- Vision Section -->
    <section id="vision" class="page-section vision-section">
      <TimelineSection />
    </section>

    <!-- Team Section -->
    <section id="team" class="page-section team-section">
      <div class="synthwave-bg-fixed"></div>
      <div class="section-container">
        <TeamSection />
      </div>
    </section>

    <!-- Final Call-to-Action -->
    <section id="contact" class="page-section contact-section">
      <FinalCTA />
    </section>

    <!-- Footer -->
    <LandingFooter />
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-color: #ffffff;
    font-family: "JetBrains Mono", monospace;
    overflow-x: hidden;
  }

  /* Hero Section with Synthwave Background */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .synthwave-bg-fixed {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: -3;
    background-color: #ffffff; /* solid base so top pixel isn't pink */
    background: 
      /* Even stronger pixelated dithering with multi-color synthwave palette */
      radial-gradient(circle 1px at 1px 1px, rgba(255, 0, 128, 0.12) 0%, transparent 50%),
      radial-gradient(circle 1px at 3px 5px,   rgba(139, 0, 255, 0.08) 0%, transparent 50%),
      radial-gradient(circle 1px at 7px 2px,   rgba(0, 255, 255, 0.08) 0%, transparent 50%),
      radial-gradient(circle 1px at 5px 8px,   rgba(0, 200, 255, 0.07) 0%, transparent 50%),
      radial-gradient(circle 1px at 2px 6px,   rgba(255, 100, 0, 0.07) 0%, transparent 50%),
      radial-gradient(circle 1px at 8px 4px,   rgba(255, 255, 0, 0.06) 0%, transparent 50%),
      radial-gradient(circle 1px at 4px 1px,   rgba(0, 255, 128, 0.07) 0%, transparent 50%),
      radial-gradient(circle 1px at 6px 7px,   rgba(255, 0, 255, 0.06) 0%, transparent 50%),
      /* multiple low-opacity synthwave spots across viewport */
      radial-gradient(circle 220px at 12% 18%, rgba(255, 0, 128, 0.06) 0%, transparent 72%),
      radial-gradient(circle 240px at 28% 65%, rgba(139, 0, 255, 0.05) 0%, transparent 75%),
      radial-gradient(circle 200px at 42% 30%, rgba(0, 255, 255, 0.045) 0%, transparent 74%),
      radial-gradient(circle 260px at 58% 78%, rgba(0, 200, 255, 0.04) 0%, transparent 78%),
      radial-gradient(circle 230px at 73% 40%, rgba(255, 100, 0, 0.045) 0%, transparent 76%),
      radial-gradient(circle 210px at 85% 15%, rgba(255, 255, 0, 0.04) 0%, transparent 80%),
      radial-gradient(circle 250px at 90% 70%, rgba(0, 255, 128, 0.05) 0%, transparent 78%),
      radial-gradient(circle 190px at 60% 10%, rgba(255, 0, 255, 0.05) 0%, transparent 75%),
      /* faint vertical noise lines for extra dither */
      repeating-linear-gradient(
        0deg,
        rgba(255,255,255,0) 0px,
        rgba(255,255,255,0) 6px,
        rgba(0,0,0,0.03) 6px,
        rgba(0,0,0,0.03) 7px);
    background-size: 
      10px 10px,
      10px 10px,
      10px 10px,
      10px 10px,
      10px 10px,
      10px 10px,
      10px 10px,
      10px 10px,
      100% 100%;
    background-position:
      0 0,
      2px 3px,
      5px 1px,
      3px 6px,
      1px 4px,
      6px 2px,
      4px 0px,
      7px 5px,
      0 0;
    animation: pixel-drift 12s ease-in-out infinite alternate;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 4rem 1rem;
    gap: 3rem;
    min-height: 100vh;
  }

  /* Page Section Structure */
  .page-section {
    position: relative;
    width: 100%;
    padding: 3rem 0;
    background: transparent;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Individual Section Styling */
  .problem-section {
    background: transparent;
  }

  .solution-section {
    background: transparent;
  }

  .mission-section {
    background: #000;
    color: #fff;
    padding: 0;
  }

  .vision-section {
    background: transparent;
    padding: 0;
  }

  .contact-section {
    background: transparent;
    text-align: center;
    border-bottom: none; /* remove divider below last CTA */
    padding: 0;
  }

  .team-section {
    background: transparent;
  }

  /* Add scroll margin to account for fixed nav */
  section[id] {
    scroll-margin-top: 80px;
  }

  /* Synthwave Background Animations */
  @keyframes pixel-drift {
    0% {
      background-position:
        0 0,
        2px 3px,
        5px 1px,
        3px 6px,
        1px 4px,
        6px 2px,
        4px 0px,
        7px 5px,
        0 0;
    }
    100% {
      background-position:
        1px 1px,
        3px 4px,
        6px 2px,
        4px 7px,
        2px 5px,
        7px 3px,
        5px 1px,
        8px 6px,
        0 0;
    }
  }

  /* floating blurred colour blobs for hero section only */
  .synthwave-bg-fixed::before,
  .synthwave-bg-fixed::after {
    content: "";
    position: absolute;
    inset: -20%;
    z-index: -2;
    background: 
      radial-gradient(circle at 20% 30%, rgba(255, 0, 128, 0.09) 0%, transparent 60%),
      radial-gradient(circle at 80% 70%, rgba(0, 255, 255, 0.075) 0%, transparent 60%),
      radial-gradient(circle at 60% 20%, rgba(139, 0, 255, 0.085) 0%, transparent 60%),
      radial-gradient(circle at 30% 80%, rgba(0, 255, 128, 0.07) 0%, transparent 60%),
      radial-gradient(circle at 50% 50%, rgba(255, 255, 0, 0.065) 0%, transparent 60%);
    filter: blur(80px) saturate(90%);
    animation: blobMove 25s ease-in-out infinite;
    pointer-events: none;
  }
  .synthwave-bg-fixed::after {
    animation-direction: alternate-reverse;
    animation-duration: 35s;
  }

  @keyframes blobMove {
    0%   {transform: translate3d(-10%, -5%, 0) scale(1);} 
    33%  {transform: translate3d(5%, 8%, 0)   scale(1.15);} 
    66%  {transform: translate3d(-4%, 12%, 0)  scale(0.9);} 
    100% {transform: translate3d(8%, -6%, 0)  scale(1.1);} 
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .page-section {
      padding: 4rem 0;
    }

    .section-container {
      padding: 0 1rem;
    }
  }

  @media (max-width: 480px) {
    .page-section {
      padding: 3rem 0;
    }

    .section-container {
      padding: 0 0.75rem;
    }
  }
</style>
