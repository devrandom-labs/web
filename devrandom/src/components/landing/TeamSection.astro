---
// Team section component for team member profiles
import { getCollection } from 'astro:content';

const teamMembers = await getCollection('team');
// Sort by order field
teamMembers.sort((a, b) => a.data.order - b.data.order);
---

<!-- Team Section -->
<section class="team-section">
  <h2 class="team-title">Meet the Team</h2>
  <div class="team-grid">
    {teamMembers.map(async (member) => {
      console.log('Member Data:', member.data);
      const { Content } = await member.render();
      return (
        <div class="team-member">
          <div class="team-avatar">
            <img src={member.data.avatar} alt={member.data.name} class="avatar-image" />
          </div>
          <h3 class="member-name">{member.data.name}</h3>
          <p class="member-role">{member.data.role}</p>
          <div class="member-bio">
            <Content />
          </div>
          <div class="member-links">
            {member.data.linkedin && (
              <a href={member.data.linkedin} target="_blank" rel="noopener" class="member-link">üîó LinkedIn</a>
            )}
            {member.data.github && (
              <a href={member.data.github} target="_blank" rel="noopener" class="member-link">üò∫ GitHub</a>
            )}
            {member.data.twitter && (
              <a href={member.data.twitter} target="_blank" rel="noopener" class="member-link">üê¶ Twitter</a>
            )}
          </div>
        </div>
      );
    })}
  </div>
</section>

<style>
  /* Team Section */
  .team-section {
    margin-top: 4rem;
    padding: 3rem 1rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .team-title {
    font-family: "JetBrains Mono", monospace;
    font-size: 1.5rem;
    font-weight: 600;
    color: #000;
    text-align: center;
    margin-bottom: 2rem;
  }

  .team-grid {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .team-member {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    max-width: 300px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .team-member:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .team-avatar {
    margin-bottom: 1rem;
    display: flex;
    justify-content: center;
  }

  .avatar-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(0, 0, 0, 0.1);
  }

  .member-name {
    font-family: "JetBrains Mono", monospace;
    font-size: 1.1rem;
    font-weight: 600;
    color: #000;
    margin-bottom: 0.5rem;
  }

  .member-role {
    font-family: "JetBrains Mono", monospace;
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.7);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .member-bio {
    font-family: "JetBrains Mono", monospace;
    font-size: 0.8rem;
    color: rgba(0, 0, 0, 0.6);
    line-height: 1.4;
    margin-bottom: 1.5rem;
  }

  .member-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .member-link {
    font-family: "JetBrains Mono", monospace;
    font-size: 0.8rem;
    color: rgba(0, 0, 0, 0.7);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .member-link:hover {
    color: rgba(0, 0, 0, 0.9);
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .team-section {
      margin-top: 2rem;
      padding: 2rem 1rem;
    }
    
    .team-member {
      padding: 1.5rem;
    }
    
    .team-title {
      font-size: 1.3rem;
    }
  }
</style> 