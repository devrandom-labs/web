---
// Email signup component for waitlist
import { getEntry } from 'astro:content';

const heroContent = await getEntry('hero', 'main');
---

<!-- Netlify email capture form -->
<form name="interest" netlify class="interest-form" aria-label="Join waitlist">
  <!-- Netlify needs an explicit hidden field when using name attr -->
  <input type="hidden" name="form-name" value="interest" />

  <label for="emailField" class="sr-only">Email address</label>
  <input id="emailField" name="email" type="email" required placeholder="your.email@company.com" class="email-input" />

  <button type="submit" class="email-submit">{heroContent.data.cta}</button>
</form>

<style>
  /* wait-list form */
  .interest-form {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    font-family: "JetBrains Mono", monospace;
    margin: 1rem auto;
  }

  .email-input {
    font-family: inherit;
    font-size: 0.9rem;
    padding: 0.6rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.25);
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.9);
    color: #000;
    min-width: 280px;
    transition: all 0.2s ease;
  }

  .email-input:focus {
    outline: 2px solid rgba(0, 0, 0, 0.6);
    outline-offset: 1px;
    border-color: rgba(0, 0, 0, 0.4);
    background: rgba(255, 255, 255, 1);
  }

  .email-submit {
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.6rem 1.5rem;
    border: none;
    border-radius: 6px;
    background: #000;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .email-submit:hover {
    background: #333;
    transform: translateY(-1px);
  }

  .email-submit:active {
    transform: translateY(0);
  }

  @media (max-width: 480px) {
    .interest-form {
      gap: 0.5rem;
      flex-direction: column;
      width: 100%;
    }

    .email-input {
      flex: 1 1 100%;
      min-width: 0;
      width: 100%;
    }

    .email-submit {
      width: 100%;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style> 