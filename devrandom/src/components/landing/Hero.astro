---
// Hero component with logo and tagline
import { getEntry } from 'astro:content';

const heroContent = await getEntry('hero', 'main');
---

<div class="hero-section">
  <div class="logo-container">
    <img src="/devrandom_logo.svg" alt="devrandom" class="logo" />
  </div>

  <div class="tagline" aria-label="Project description">
    <h2 class="punch-sub">{heroContent.data.title}</h2>
    <p class="brand">{heroContent.data.subtitle}</p>
  </div>
</div>

<style>
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .logo-container {
    /* animation disabled */
  }

  .logo {
    width: 300px;
    height: auto;
    filter: 
      drop-shadow(0 0 8px rgba(255, 0, 128, 0.10)) 
      drop-shadow(0 0 16px rgba(139, 0, 255, 0.07)) 
      drop-shadow(0 0 24px rgba(255, 0, 128, 0.05));
    /* animation disabled */
  }

  @media (max-width: 768px) {
    .logo {
      width: 250px;
    }
  }

  @media (max-width: 480px) {
    .logo {
      width: 200px;
    }
  }

  /* tagline styles */
  .tagline {
    font-family: "JetBrains Mono", monospace;
    color: rgba(0, 0, 0, 0.85);
    max-width: 60ch;
    text-align: center;
    margin: 0 auto;
    line-height: 1.5;
  }

  .tagline h1,
  .tagline h2 {
    margin-bottom: 0.25rem;
    color: #000;
  }

  .punch-line {
    font-size: 1.6rem;
    font-weight: 600;
    letter-spacing: 0.03em;
  }

  .punch-sub {
    font-size: 1.1rem;
    font-weight: 500;
  }

  .tagline p {
    margin: 0.3rem 0 0;
    font-size: 0.95rem;
  }

  .brand {
    font-weight: 600;
    margin-top: 0.4rem;
    font-size: 1rem;
  }

  @media (max-width: 480px) {
    .punch-line { font-size: 1.2rem; }
    .punch-sub  { font-size: 0.95rem; }
    .tagline p  { font-size: 0.85rem; }
  }
</style> 